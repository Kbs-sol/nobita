# Environment variables template for production deployment
# Copy this to .dev.vars for local development

# OpenRouter API for AI blog generation
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Telegram Bot API for file streaming  
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# JWT Secret for admin authentication (use a long, random string)
JWT_SECRET=your_jwt_secret_key_here_use_long_random_string

# Admin panel access
SUPERADMIN_USERNAME=superadmin
SUPERADMIN_PASSWORD=admin123

# Site configuration
SITE_NAME=Doraemon Movie Stream
SITE_URL=https://your-domain.pages.dev
SITE_DESCRIPTION=Watch and download Doraemon movies with AI-generated blogs

# Ad Networks (optional)
ADSENSE_CLIENT_ID=ca-pub-your-adsense-id
ADSENSE_SLOT_ID=your-ad-slot-id

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-YOUR-GA-ID

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Session configuration
SESSION_EXPIRE_HOURS=24
AD_UNLOCK_EXPIRE_HOURS=1